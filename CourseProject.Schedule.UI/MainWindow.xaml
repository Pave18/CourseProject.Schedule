<Window x:Class="CourseProject.Schedule.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.Schedule.UI"
        mc:Ignorable="d"
        Title="Schedule" Height="635" Width="501" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ComboBox x:Name="comboBoxGroups" SelectionChanged="comboBox_SelectionChanged" Margin="4"/>

        <DataGrid x:Name="dataGridSchedule" IsReadOnly="True" Grid.Row="1" Margin="4"/>

    </Grid>
</Window>
